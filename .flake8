[flake8]
max-line-length = 120
ignore =
    E203,
    W503,
    F401

exclude =
    .git,
    __pycache__,
    .pytest_cache,
    allure-results,
    venv,
    .venv,
    downloaded_files

per-file-ignores =
    config/__init__.py:D104
    __init__.py:F401
    conftest.py:F401,F403
    tests/*: D100,D101,D102,D103,D104,D105,D106,D107
